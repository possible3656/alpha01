<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity_league">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/desiredleaguebg"
            android:id="@+id/next" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" android:scaleType="centerCrop"/>
    <ImageView
            android:layout_width="88dp"
            android:layout_height="29dp" app:srcCompat="@drawable/swooshlogo"
            android:id="@+id/imageView4"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="160dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="160dp" app:layout_constraintHorizontal_bias="0.987"/>
    <Button
            android:text="Next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button5" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent" android:background="@drawable/button"
            android:textSize="20sp" android:textStyle="bold" android:textColor="@color/colorAccent"/>
    <ToggleButton
            android:text="Mens"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/toggleButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="108dp" app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:layout_constraintHorizontal_bias="0.0" android:textStyle="bold" android:textColor="#FFFFFF"
            android:textSize="25sp" android:textOff="Mens" android:textOn="Mens"
            android:background="@drawable/state"/>
    <ToggleButton
            android:text="Womens"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/toggleButton2"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/toggleButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:textStyle="bold"
            android:textColor="#FFFFFF" android:textSize="25sp" android:textOff="Womens"
            android:textOn="Womens" android:background="@drawable/state" app:layout_constraintHorizontal_bias="0.0"/>
    <ToggleButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/toggleButton3" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/toggleButton2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:textStyle="bold" android:textColor="#FFFFFF" android:textSize="25sp"
            android:textOn="CO_ED" android:textOff="CO_ED" app:layout_constraintHorizontal_bias="0.0"
            tools:text="CO_ED" android:text="CO_ED" android:background="@drawable/state"/>
</android.support.constraint.ConstraintLayout>